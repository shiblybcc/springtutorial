<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="patient" class="com.livingoncodes.spring.springtutorial04.Patient">
		<constructor-arg value="5" name="id"></constructor-arg>
		<constructor-arg value="Tom" name="name"></constructor-arg>
		<!-- <property name="nationalId" value="1234"></property> #this also works -->
		<property name="nationalId">
			<value>12345</value>
		</property>
		<property name="address" ref="address"></property>
	</bean>
	<bean id="address" class="com.livingoncodes.spring.springtutorial04.Address">
		<constructor-arg name="street" value="streetname"></constructor-arg>
		<constructor-arg name="postcode" value="postcode123"></constructor-arg>
	</bean>
</beans>
